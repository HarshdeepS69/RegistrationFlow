<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F191B"
    tools:context=".Fragments.SignUpFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/P60H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/P34H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".34" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/P26H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".26" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/P80H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".9" />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/P20V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".2" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/P10V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/P90V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/P03V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/P97V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".97" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-60dp"
        android:scaleType="fitXY"
        android:src="@drawable/back_girl"
        app:layout_constraintBottom_toTopOf="@id/P60H"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/P20V"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_marginStart="10dp"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/P03V"
        app:layout_constraintTop_toBottomOf="@id/P26H"

        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        android:backgroundTint="#808080"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@id/P80H"
        app:layout_constraintEnd_toEndOf="@id/P97V"
        app:layout_constraintStart_toStartOf="@id/P03V"
        app:layout_constraintTop_toTopOf="@id/P34H">


    </com.google.android.material.card.MaterialCardView>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@id/P80H"
    app:layout_constraintEnd_toEndOf="@id/P97V"
    app:layout_constraintStart_toStartOf="@id/P03V"
    app:layout_constraintTop_toTopOf="@id/P34H">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="29dp"
            android:text="@string/signuptxt"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/enteredEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="29dp"
            android:text="e-mail@gmail.com"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNameSignup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="29dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_backg"
            android:elevation="5dp"
            android:hint="Name"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toEndOf="@id/P97V"
            app:layout_constraintStart_toStartOf="@id/P03V"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtPass"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="29dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_backg"
            android:elevation="5dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toEndOf="@id/P97V"
            app:layout_constraintStart_toStartOf="@id/P03V"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signuptxt2"
            android:layout_marginHorizontal="29dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I agree to "
                android:textColor="@color/white"
                android:layout_marginStart="29dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtTermsOfService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms of Service and privacy Policy"
                android:textColor="@color/my_light_primary"
                android:textSize="16sp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btnAgreeContinue"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_backg"
            android:text="Agree and continue"
            android:layout_marginHorizontal="29dp"
            app:layout_constraintEnd_toEndOf="@id/P90V"
            app:layout_constraintStart_toStartOf="@id/P03V"
            android:elevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/edtEmail"
            tools:ignore="NotSibling" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="29dp"
                android:text="Already have an Account?"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/P92H"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtdhaveacc"/>
            <TextView
                android:id="@+id/txtLoginForSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="7dp"
                android:text="Login"
                android:textColor="@color/my_light_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/P92H"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtdhaveacc"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtDifMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Sign up using different method?"
            android:textColor="@color/my_light_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="29dp"
            app:layout_constraintBottom_toTopOf="@id/P92H"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtdhaveacc"/>
    </LinearLayout>
   </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>